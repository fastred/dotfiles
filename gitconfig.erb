[user]
	name = Arkadiusz Holko
	email = fastred@fastred.org
[alias]
	st = status
	ci = commit
  ca = commit --amend
	co = checkout
	br = branch
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	ll = log --stat --abbrev-commit
	d = diff --color-words
	dh = diff --color-words head
	cleanup = "!git branch --merged | grep -v master | grep -v develop | xargs -n 1 git branch -d"
	reho = !git fetch && git reset --hard origin/`git rev-parse --abbrev-ref HEAD`
	fdev = fetch origin develop:develop
	undo-commit = reset --soft HEAD~1
  wip = !git commit -a -m "WIP"
  pb = !git checkout $(git branch | selecta)
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
	autocrlf = input
  commentchar = %
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
	user = fastred
[credential]
	helper = osxkeychain
[push]
  default = current
[diff "localizablestrings"]
  textconv = "iconv -f utf-16 -t utf-8"
[merge]
  keepBackup = false
  tool = opendiff
[mergetool "mergepbx"]
  cmd = mergepbx "$BASE" "$LOCAL" "$REMOTE" -o "$MERGED"
